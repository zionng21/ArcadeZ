@page "/enterpriseProducts/"
@inject NavigationManager _navManager
@inject HttpInterceptorService _interceptor
@implements IDisposable

<h3 style="padding-top:1rem;" class=" card-title text-center p-5 mt-1">Choose A Product To Edit</h3>
<div class="border-top px-2 mx-2 pb-1" style="background-color:#1ABC9C;"></div>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-3">
            <!-- First Div -->
            <div class="text-center">
                <NavLink class="btn btn-xl btn-outline-store" href="/enterpriseProducts/software" Match="NavLinkMatch.All">
                    Software
                </NavLink>
            </div>
        </div>
        <div class="col-md-3">
            <!-- Second Div -->
            <div class="text-center">
                <NavLink class="btn btn-xl btn-outline-store" href="/enterpriseProducts/hardware" Match="NavLinkMatch.All">
                    Hardware
                </NavLink>
            </div>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        _interceptor.MonitorEvent();
        if (_navManager.Uri.EndsWith("/enterpriseProducts/"))
        {
            _navManager.NavigateTo("/enterpriseProducts/software");
        }
    }

    public void Dispose()
    {
        _interceptor.DisposeEvent();
    }
}
