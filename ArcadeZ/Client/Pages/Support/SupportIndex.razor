@page "/support"
@inject HttpInterceptorService _interceptor
@implements IDisposable

<h3 style="padding-top:1rem;" class=" card-title text-center p-5 mt-1">What can we help you with today?</h3>
<div class="border-top px-2 mx-2 pb-1"style="background-color:#1ABC9C;"></div>

<div class="container pb-5 pt-5" >
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <a href="/support/custOrder" class="btn btn-primary btn-block rowBtn">Purchases</a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <a href="/support/viewReq" class="btn btn-primary btn-block rowBtn">View my Support request</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {

    protected async override Task OnInitializedAsync()
    {
        _interceptor.MonitorEvent();
    }

    public void Dispose()
    {
        _interceptor.DisposeEvent();
    }

}
